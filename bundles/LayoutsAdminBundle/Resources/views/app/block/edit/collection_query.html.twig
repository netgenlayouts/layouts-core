{% set collection_identifier = collection_identifier|default('default') %}

{% if block.hasCollection(collection_identifier) %}
    {% set collection = block.collection(collection_identifier) %}

    {% if collection.hasQuery and forms.query is defined %}
        <div data-form data-query-form="true">
            {{ nglayouts_render_value(
                forms.query,
                {'action': path('nglayouts_app_collection_query_form_edit', {'queryId': collection.query.id.toString, 'locale': collection.query.locale})}
            ) }}
        </div>
    {% endif %}
{% endif %}
